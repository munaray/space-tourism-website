{
  "name": "space-tourism-website-main",
  "version": "1.0.0",
  "description": "![Design preview for the Space tourism website coding challenge](./preview.jpg)",
  "main": "public/index.html",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy:js": "copyfiles -u 1 ./src/scripts/*.js public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:js": "onchange \"src/scripts/*.js\" -- npm run copy:js",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html copy:assets copy:scripts build:*",
    "postbuild:css": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "postbuild": "npm-run-all postbuild:css postbuild:js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.57.1",
    "uglifyjs-folder": "^3.2.0"
  },
  "dependencies": {
    "serve": "^14.2.0"
  }
}
